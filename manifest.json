{
  "manifest_version": 2,
  "name": "Word Definition",
  "version": "1.0",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "scripts": ["background.js"]
  },

  "browser_action": {
    "default_popup": "paragraph/index.html",
    "default_title": "Look for definition"
  }
}
